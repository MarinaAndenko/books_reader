<div class="field-center">
  <h2 class = "heading">Log in</h2><br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if alert %>
      <div class="alert alert-warning alert-block">
      <button type="button" class="close" data-dismiss="alert">x</button>
        <p class="text-danger button-center"><%= alert %></p>
      </div>
    <% elsif notice %>
      <div class="alert-center alert alert-warning alert-block">
      <button type="button" class="close" data-dismiss="alert">x</button>
        <p class="text-danger button-center"><%= notice %></p>
      </div>
    <% end %>
  <%= f.text_field :email, autofocus: true, placeholder: "Email", id: "sizing-addon1", class: "form-control"  %>
   <br>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
   <br> 
  <div class = "button-center">
    <%= f.submit "Sign in", class: "btn btn-primary btn-lg button-enter" %>
  </div>
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class= "forgot" >
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-text" %><br>
    </div>
  <% end -%>
</div>
