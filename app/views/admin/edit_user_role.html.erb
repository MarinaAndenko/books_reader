<%= form_for :user, url: edit_user_role_path do |f| %>
	<div class="field-center-book">
	  <table class="table table-hover">
	    <thead>
	      <tr class="color-table">
	        <th>ID</th>
	        <th>Email</th>
	        <th>Admin Role</th>
	      </tr>
	    </thead>
	    <tbody>
	      <% @users.each do |user| %>
	          <tr>
	          	<td><%= user.id %></td>
	            <td><%= user.email %></td>
	            <td>
	            	<%= check_box_tag("people[]", user.id, user.admin?)%>
	            </td>
	          </tr>
	      <% end %>
	    </tbody>
	  </table>
	</div>
	<div class = "button-center">
	  <%= f.submit "Save", class: "btn btn-warning button-save-role" %>
	</div>
<% end %>
